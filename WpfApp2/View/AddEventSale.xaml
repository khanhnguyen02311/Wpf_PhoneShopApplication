<Page x:Class="WpfApp2.View.AddEventSale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.View"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="910"
       DataContext="{StaticResource AddEventSaleVM}"
              x:Name="wdAddEvent"
      Title="AddEventSale">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>

        </Grid.RowDefinitions>
        <!--Nút backward-->
        <Button
            HorizontalAlignment="Left"
            x:Name="btnbackward"
            Background="White"
            BorderBrush="White"
            VerticalAlignment="Center"
            Height="25" Width="25"
            Margin="5"
            Command="{x:Static NavigationCommands.BrowseBack}"
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
            <materialDesign:PackIcon
                Kind="KeyboardArrowLeft"
                Height="20"
                Width="20"
                Foreground="Black"/>
        </Button>
        <!--Nút forward-->
        <Button
            HorizontalAlignment="Left"
            Background="White"
            BorderBrush="White"
            VerticalAlignment="Center"
            Command="{x:Static NavigationCommands.BrowseForward}"
            Height="25" Width="25"
            Margin="35 0 0 0"
            
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
            <materialDesign:PackIcon
                Kind="KeyboardArrowRight"
                Height="20"
                Width="20" 
                />
        </Button>
        <!--Nút refresh-->
        <Button HorizontalAlignment="Left"
                Background="White"
                BorderBrush="White"
                VerticalAlignment="Center"
                Height="25" Width="25"
                Command="{Binding ResetEvent}"
                CommandParameter="{Binding ElementName=wdAddEvent}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                Margin="65,0,0,0">
            <materialDesign:PackIcon
                Kind="Refresh"
                Height="20"
                Width="20" />
        </Button>

        <TextBlock Grid.Row="0"
                   Foreground="White"
                   Text="SỰ KIỆN KHUYẾN MÃI"
                   FontSize="20" 
                   FontFamily="Roboto"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2"
                                  Direction="315"
                                  Color="Black"
                                  Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>
        <Grid Grid.Row="1"                 
              Grid.Column="0"
              Grid.ColumnSpan="3">
            <materialDesign:Card Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="3"
                             Margin="10" 
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             Opacity="0.3"/>
            <ListView FontFamily="Roboto"
                      FontSize="12"
                      Name="akanaka"                      
                      Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      ItemsSource="{Binding ListEventSale, Mode=TwoWay}" 
                      SelectedItem="{Binding SelectedItem}"
                      Margin="15"
                      HorizontalAlignment="Stretch">

                <ListView.Resources>
                    <Style x:Key="ShadowEffect" TargetType="{x:Type Border}">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="20"
                                              Color="White"
                                              Opacity="0.7"
                                              ShadowDepth="0"/>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="TextStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="165">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ShadowEffect}">
                                        <TextBlock Text="Ngày bắt đầu"
                                            Style="{StaticResource TextStyle}"
                                            FontSize="15"
                                            FontWeight="Bold">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Datebegin, StringFormat='dd-MM-yyyy'}"
                                               Style="{StaticResource TextStyle}"
                                               FontSize="14"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="165">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ShadowEffect}">
                                        <TextBlock Text="Ngày kết thúc" 
                                            Style="{StaticResource TextStyle}"
                                            FontSize="15"
                                            FontWeight="Bold">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Datefinish, StringFormat='dd-MM-yyyy'}"
                                               Style="{StaticResource TextStyle}"
                                               FontSize="14">
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="180">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ShadowEffect}">
                                        <TextBlock Text="Tên sự kiện" 
                                            Style="{StaticResource TextStyle}"
                                            FontSize="15"
                                            FontWeight="Bold">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"
                                       Style="{StaticResource TextStyle}"
                                       FontSize="14">
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="180">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ShadowEffect}">
                                        <TextBlock Text="Giảm giá" 
                                            Style="{StaticResource TextStyle}"
                                            FontSize="15"
                                            FontWeight="Bold">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Percent_sale}"
                                       Style="{StaticResource TextStyle}"
                                       FontSize="14">
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Grid.Row="0">
                <TextBox Text="{Binding Name}"
                         FontFamily="Roboto"
                         HorizontalContentAlignment="Center"
                         FontWeight="Bold"
                         FontSize="15"
                         Height="50"
                         materialDesign:HintAssist.Hint="Tên sự kiện"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Margin="20 0 10 0"
                         materialDesign:HintAssist.Foreground="White"
                         BorderBrush="White"
                         Foreground="#DDDDDD"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Column="0"
                  Grid.Row="1">
                <TextBox Text="{Binding ID}"
                         FontFamily="Roboto"
                         FontWeight="Bold"
                         FontSize="15"
                         Height="50"
                         HorizontalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Mã sự kiện"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="20 0 10 20"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Foreground="White"
                         materialDesign:BottomDashedLineAdorner.Brush="White"
                         BorderBrush="White"
                         Foreground="#DDDDDD"
                         materialDesign:ThemeAssist.Theme="Dark"/>
            </Grid>

            <Grid Grid.Column="1"
                  Grid.Row="0">
                <DatePicker FontWeight="Bold"
                            HorizontalContentAlignment="Center"
                            FontSize="15"
                            FontFamily="Roboto"
                            materialDesign:HintAssist.Hint="Ngày bắt đầu"
                            SelectedDate="{Binding DayBegin, StringFormat='dd-MM-yyyy'}" 
                            Height="50"
                            Margin="10 0 10 0"
                            Padding="4 0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:BottomDashedLineAdorner.Brush="White"
                            BorderBrush="White"
                            Foreground="#DDDDDD"/>

            </Grid>
            <Grid Grid.Column="1"
                  Grid.Row="1">
                <DatePicker HorizontalContentAlignment="Center"
                            SelectedDate="{Binding DayEnd, StringFormat='dd-MM-yyyy'}" 
                            materialDesign:HintAssist.Hint="Ngày kết thúc" 
                            FontFamily="Roboto"
                            FontWeight="Bold"
                            FontSize="15"
                            Height="50"
                            Padding="4 0"
                            materialDesign:HintAssist.Foreground="White"
                             materialDesign:BottomDashedLineAdorner.Brush="White"
                             BorderBrush="White"
                             Foreground="#DDDDDD"
                            Margin="10 0 10 20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"/>

            </Grid>
            <Grid Grid.Column="2"
                  Grid.Row="1">
                <TextBox HorizontalContentAlignment="Center"
                         Text="{Binding Discount}"
                         FontFamily="Roboto"
                         FontWeight="Bold"
                         FontSize="15"
                         Height="50"
                         Margin="10 0 10 20"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Giảm giá (%)"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Foreground="White"
                         materialDesign:BottomDashedLineAdorner.Brush="White"
                         BorderBrush="White"
                         Foreground="#DDDDDD"
                         materialDesign:ThemeAssist.Theme="Dark"/>

            </Grid>
            <Grid Grid.Column="3"
                  Grid.Row="0"
                  Grid.RowSpan="2">
                <Button Command="{Binding SaveEvent}"
                        CommandParameter="{Binding ElementName=wdAddEvent}" Content="Thêm sự kiện"
                        FontWeight="Bold"
                        FontSize="15"
                        Height="40"
                        Width="150"
                        Foreground="White"
                        BorderBrush="White"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        FontFamily="Roboto" 
                        Margin="0 0 20 30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
